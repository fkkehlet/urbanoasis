---
const { class: className } = Astro.props;
---

<div
  x-data
  x-intersect.once="$el.classList.add('end')"
  class={`start transition duration-1000 motion-reduce:transition-none ${className}`}
>
  <slot />
</div>

<style>
  .start {
    opacity: 0%;
    transform: translateY(-100%);
  }

  .end {
    opacity: 100%;
    transform: translateY(0);
  }
</style>
