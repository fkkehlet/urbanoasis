---
const { class: className = '' } = Astro.props;
---

<div class={`animate duration-500 delay-200 motion-reduce:animate-none ${className}`} :class="{ 'trig': view }">
  <slot />
</div>

<style>
  .trig {
    animation-name: jiggle;
  }
  @keyframes jiggle {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(3deg);
    }
    60% {
      transform: rotate(-3deg);
    }
    70% {
      transform: rotate(3deg);
    }
    80% {
      transform: rotate(-3deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
</style>
