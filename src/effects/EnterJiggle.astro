---
const { class: className = '' } = Astro.props;
---

<div class={`init ${className}`} :class="{ 'trig': view }">
  <slot />
</div>

<style>
  .trig {
    animation: 1000ms jiggle;
  }
  @media (prefers-reduced-motion) {
    .trig {
      animation: none;
    }
  }
  @keyframes jiggle {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(3deg);
    }
    60% {
      transform: rotate(-3deg);
    }
    70% {
      transform: rotate(3deg);
    }
    80% {
      transform: rotate(-3deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
</style>
