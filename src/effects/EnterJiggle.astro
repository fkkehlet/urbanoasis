---
const { class: className } = Astro.props;
---

<div
  x-data
  x-intersect.once.margin.-30%.0="$el.classList.add('trigger')"
  class={`motion-reduce:animate-none ${className}`}
>
  <slot />
</div>

<style>
  .trigger {
    animation: 1000ms jiggle;
  }

  @keyframes jiggle {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(3deg);
    }
    60% {
      transform: rotate(-3deg);
    }
    70% {
      transform: rotate(3deg);
    }
    80% {
      transform: rotate(-3deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
</style>
